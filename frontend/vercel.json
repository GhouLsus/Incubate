{
  "version": 2,
  "name": "sweet-shop-frontend",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://sweet-shop-api.onrender.com"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://sweet-shop-api.onrender.com/:path*"
    }
  ]
}
